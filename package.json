{
  "name": "quiz",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/config/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "dev": "lerna run dev --stream",
    "refresh": "lerna clean -y && lerna bootstrap",
    "build-server": "docker build -t quiz-server -f ./packages/server/Dockerfile ."
  },
  "lint-staged": {
    "src/**/*.js": [
      "lerna run lint --stream"
    ],
    "src/**/*.ts": [
      "lerna run lint --stream"
    ],
    "src/**/*.tsx": [
      "lerna run lint --stream"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@quiz/eslint": "*",
    "@types/jest": "^26.0.13",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
